# Branding
PROJECT_NAME=TinyClient
NEXT_PUBLIC_PROJECT_NAME=TinyClient

# Database
DATABASE_URL=sqlite:///./tinyclient.db

# JWT Configuration
JWT_SECRET_KEY=changeme
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application URLs - unified configuration for deployment
APP_DOMAIN=localhost
APP_PROTOCOL=http
FRONTEND_PORT=3000
BACKEND_PORT=8001

# Next.js public variables (auto-built from APP_* if not set)
NEXT_PUBLIC_APP_DOMAIN=localhost
NEXT_PUBLIC_APP_PROTOCOL=http
NEXT_PUBLIC_FRONTEND_PORT=3000
NEXT_PUBLIC_BACKEND_PORT=8001

# Optional: explicit API base URL override (prefer unified vars above)
# NEXT_PUBLIC_API_BASE_URL=

# Signup & invitations
ALLOW_SIGNUP=true
EMAIL_VERIFICATION_EXPIRATION_HOURS=24
INVITE_EXPIRATION_HOURS=24
NEXT_PUBLIC_ALLOW_SIGNUP=true

# Password reset
PASSWORD_RESET_EXPIRATION_HOURS=2

# Password policy (backend + frontend)
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_LOWER=true
PASSWORD_REQUIRE_UPPER=true
PASSWORD_REQUIRE_DIGIT=true
PASSWORD_REQUIRE_SYMBOL=true
NEXT_PUBLIC_PASSWORD_MIN_LENGTH=12
NEXT_PUBLIC_PASSWORD_REQUIRE_LOWER=true
NEXT_PUBLIC_PASSWORD_REQUIRE_UPPER=true
NEXT_PUBLIC_PASSWORD_REQUIRE_DIGIT=true
NEXT_PUBLIC_PASSWORD_REQUIRE_SYMBOL=true

# Resend email settings
RESEND_API_KEY=your-resend-api-key
RESEND_FROM_EMAIL=noreply@example.com
RESEND_FROM_NAME=TinyClient

# Initial users (for database seeding)
ADMIN_EMAIL=admin@example.com
ADMIN_USERNAME=admin
ADMIN_PASSWORD=changeMe123!
USER_EMAIL=user@example.com
USER_USERNAME=user
USER_PASSWORD=changeMe123!

# CORS and logging
EXTRA_ALLOWED_ORIGINS=
LOG_ONLY_API_PATHS=true
SKIP_OPTIONS_LOGS=true

# Cookies (env-driven; sane defaults used if unset)
# If APP_PROTOCOL=https and COOKIE_SECURE is unset, it defaults to true
COOKIE_SECURE=
# lax | strict | none
COOKIE_SAMESITE=lax
# Optional cookie domain (e.g., .example.com). Leave empty for host-only cookies
COOKIE_DOMAIN=
# Cookie path scope
COOKIE_PATH=/
